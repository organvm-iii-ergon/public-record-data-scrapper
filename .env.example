# UCC-MCA Intelligence Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Use mock data (set to false for production with real data)
VITE_USE_MOCK_DATA=true

# Enable real-time data ingestion
VITE_ENABLE_REALTIME_INGESTION=false

# Enable ML-based enrichment
VITE_ENABLE_ML_ENRICHMENT=false

# Enable automatic data refresh
VITE_ENABLE_AUTO_REFRESH=false

# Enable debug mode (additional logging)
VITE_DEBUG_MODE=false

# =============================================================================
# DATA SOURCES
# =============================================================================

# UCC Filing API Configuration
# Provider: Your UCC filing data provider
VITE_UCC_API_ENDPOINT=https://api.ucc-filings.com/v1
VITE_UCC_API_KEY=your_ucc_api_key_here

# Alternative Data Sources (optional)
# Add additional endpoints as needed
# VITE_UCC_API_ENDPOINT_2=https://api.alternative-provider.com/v1
# VITE_UCC_API_KEY_2=your_alternative_api_key

# =============================================================================
# ML & ENRICHMENT SERVICES
# =============================================================================

# Machine Learning API
# For revenue estimation and industry classification
VITE_ML_API_ENDPOINT=https://ml.example.com/v1
VITE_ML_API_KEY=your_ml_api_key_here

# Web Scraper Service
# For growth signals and health score detection
VITE_SCRAPER_ENDPOINT=https://scraper.example.com
VITE_SCRAPER_API_KEY=your_scraper_api_key

# =============================================================================
# EXTERNAL DATA PROVIDERS (Optional)
# =============================================================================

# Job Boards (for hiring signals)
# VITE_INDEED_API_KEY=your_indeed_api_key
# VITE_LINKEDIN_API_KEY=your_linkedin_api_key

# Business Intelligence
# VITE_DNB_API_KEY=your_dnb_api_key
# VITE_CLEARBIT_API_KEY=your_clearbit_api_key

# Government Contracts (for contract signals)
# VITE_USASPENDING_API_KEY=your_usaspending_api_key

# Reviews & Sentiment (for health scores)
# VITE_YELP_API_KEY=your_yelp_api_key
# VITE_GOOGLE_PLACES_API_KEY=your_google_places_api_key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection
# Note: These are NOT prefixed with VITE_ as they are used server-side only
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ucc_mca
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database Pool Configuration (optional)
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Enable query logging (for debugging)
DB_LOG_QUERIES=false

# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================

# Ingestion interval (milliseconds) - default: 24 hours
# VITE_INGESTION_INTERVAL=86400000

# Enrichment interval (milliseconds) - default: 6 hours
# VITE_ENRICHMENT_INTERVAL=21600000

# Refresh interval (milliseconds) - default: 12 hours
# VITE_REFRESH_INTERVAL=43200000

# Stale data threshold (days) - default: 7 days
# VITE_STALE_DATA_THRESHOLD=7

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limits (requests per minute)
# VITE_API_RATE_LIMIT=100
# VITE_SCRAPER_RATE_LIMIT=30

# =============================================================================
# SECURITY
# =============================================================================

# Encryption key for sensitive data (generate with: openssl rand -base64 32)
# VITE_ENCRYPTION_KEY=your_32_byte_base64_encoded_key

# CORS origins (comma-separated)
# VITE_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=your_sentry_dsn

# Google Analytics ID
# VITE_GA_ID=your_ga_id

# PostHog API Key for product analytics
# VITE_POSTHOG_KEY=your_posthog_key

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# API proxy for local development (to avoid CORS)
# VITE_API_PROXY=http://localhost:3001

# Mock delay (milliseconds) for simulating network latency
# VITE_MOCK_DELAY=500

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Never commit the actual .env file to version control
# 2. Rotate API keys regularly
# 3. Use different keys for development and production
# 4. Store production keys in a secure secrets manager
# 5. For GitHub Spark deployment, use GitHub Secrets for sensitive values
#
# For more information, see:
# - DATA_PIPELINE.md - Detailed pipeline documentation
# - README.md - General project documentation
# - SECURITY.md - Security best practices
